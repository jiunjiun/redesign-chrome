{
  "name": "reDesign",
  "manifest_version": 2,
  "version": "0.1",
  "description": "redesign you page",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://redesign.jiunjiun.me/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/content_script.js"
      ],
      "all_frames" : false
    }
  ],
  "icons": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "64": "images/icon_64.png",
     "128": "images/icon_128.png"
  },
  "page_action": {
    "default_icon": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "64": "images/icon_64.png",
       "128": "images/icon_128.png"
    },
    // "default_title": "reDesign",
    "default_popup": "html/popup.html"        // popup
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "html/option.html"
}